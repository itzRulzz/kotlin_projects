<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <View
            android:id="@+id/red_light"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_shape_gray"
            android:layout_marginTop="20dp" />

        <View
            android:id="@+id/yellow_light"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/red_light"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_shape_gray" />

        <View
            android:id="@+id/green_light"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/yellow_light"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_shape_gray" />

        <Button
            android:id="@+id/button_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/green_light"
            android:layout_marginTop="40dp"
            android:text="Change Light" />
    </RelativeLayout>
</ScrollView>